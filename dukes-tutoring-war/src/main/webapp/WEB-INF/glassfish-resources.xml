<resources>
    <jdbc-connection-pool
            name="mysql-pool"
            datasource-classname="com.mysql.jdbc.jdbc2.optional.MysqlDataSource"
            res-type="javax.sql.DataSource">
        <property name="user" value="root"/>
        <property name="password" value="wxlwxkwzl-2015"/>
        <property name="url" value="jdbc:mysql://localhost:3306/bams?allowPublicKeyRetrieval=true&amp;useSSL=false"/>
    </jdbc-connection-pool>

    <!-- jndi-name 的值必须加前缀app:xxx/ -->
    <jdbc-resource
            enabled="true"
            jndi-name="java:app/jdbc/mysql-resource"
            object-type="user"
            pool-name="mysql-pool"/>
</resources>